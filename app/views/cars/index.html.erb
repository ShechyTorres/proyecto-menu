<title>Proyecto Menú</title>
<br>

<div>
	<div class="container">
		<h1 class="h1-index">Listado de Carros</h1>
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>ID: </th>
					<th>Placa: </th>
					<th>Modelo: </th>
					<th>Color: </th>
					<th colspan="3">Acción: </th>
				</tr>
			</thead>
			<tbody>
				<% @cars.each do |car| %>
				<tr>
					<td><%= car.id %></td>
					<td><%= car.placa %></td>
					<td><%= car.modelo %></td>
					<td><%= car.color %></td>
					<td class="btn btn-default btns-action">
						<%= link_to '', car, class: 'boton-show glyphicon glyphicon-eye-open', controller: 'cars', action: 'show' %>
					</td>
					<td class="btn btn-default btns-action">
						<%= link_to 'Edit', class: 'boton-edit glyphicon glyphicon-pencil', controller: 'cars', action: 'edit', id: car %>
					</td>
					<td class="btn btn-default btns-action-delete">
						<%= link_to '', car, class: "boton-delete glyphicon glyphicon-trash", method: :delete, data: { confirm: '¿Deseas eliminar este carro?'} %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<%# <span class="aside-index navbar-fixed-bottom">
		<ul class="nav navbar-right boton-new">
			<li>
				<%= link_to "", cars_new_path, class: "btn btn-success glyphicon glyphicon-plus", id: "boton-new" 
			</li>
		</ul>
	</span> %>
</div>
<div class="contenedor-mas">
	<%= link_to "", cars_new_path, class: "boton-new glyphicon glyphicon-plus" %>
</div>